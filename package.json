{
  "name": "o2a_backend",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": " nodemon app",
    "lint": "eslint .",
    "sonar": "node sonar-project.js",
    "build": "node server.js",
    "test": "NODE_ENV=test jest --coverage --testTimeout=80000",
    "test:watch": "set NODE_ENV=test && nodemon --exec \"jest --reporter spec --exit --timeout 10000 tests/\""
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugin": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AssNiang/AllergyFrontend.git"
  },
  "author": "O2A",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.2",
    "mongoose-unique-validator": "^3.1.0",
    "multer": "^2.0.0-rc.1",
    "nodemon": "^2.0.20",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.2",
    "jest-sonar-reporter": "^2.0.0",
    "mocha": "^10.0.0",
    "mongodb-memory-server": "^8.9.1",
    "prettier": "^2.7.1",
    "sonarqube-scanner": "^2.8.1",
    "supertest": "^6.2.4"
  }
}
